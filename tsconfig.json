{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "ES6",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}
